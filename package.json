  "dependencies": {
    "@hono/zod-validator": "^0.4.2",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.3",
    "hono": "^4.6.15",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241224.0",
    "@types/node": "^22.10.2",
    "drizzle-kit": "^0.30.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "wrangler": "^3.96.0"
  }
}
